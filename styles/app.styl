@import url(https://fonts.googleapis.com/css?family=RobotoDraft:regular,bold,italic,thin,light,bolditalic,black,medium)

@import 'global'

@import 'components/header'
@import 'components/spinner'
@import 'components/stations'
@import 'components/departures'
@import 'components/journey'

body
	color #333

h3
	font-weight 400


.slideUp-enter.slideUp-enter-active {
  opacity 1
  transform translate3d(0, 0, 0)
}

.slideUp-leave {
  opacity 1
  transition opacity .2s ease-in
}

.slideUp-leave.slideUp-leave-active {
  opacity 0.01
}


$animationDelay = 0.05s
	.slideUp-enter
		opacity 0
		transform translate3d(0, -40%, 0)
		transition .5s cubic-bezier(0.175, 0.885, 0.32, 1.275)
		for $i in (1)..(20)
			&:nth-child({$i})
				transition-delay (($i * $animationDelay) - $animationDelay)
